@using Tazkara.ViewModels
@model ProfileFormViewModel
@{
	ViewData["Title"] = "Edit User";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-controller="Users" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" maxlength="100" aria-required="true" />
                <label asp-for="FirstName">FirstName</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" maxlength="100" aria-required="true" />
                <label asp-for="LastName">LastName</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" maxlength="100" aria-required="true" />
                <label asp-for="UserName">UserName</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            <hr />
            <button type="submit" class="btn btn-primary d-block mt-4"> Save</button>
        </form>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }