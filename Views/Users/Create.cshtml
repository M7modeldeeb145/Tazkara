@using Tazkara.ViewModels
@model AddUserViewModel

@{
	ViewData["Title"] = "Add New User";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Users" method="post">
            <h2>Create a new User</h2>
            <hr />
            @* <div asp-validation-summary="All" class="text-danger" role="alert"></div> *@
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" maxlength="100" aria-required="true" />
                <label asp-for="FirstName">FirstName</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" maxlength="100" aria-required="true" />
                <label asp-for="LastName">LastName</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" maxlength="100" aria-required="true" />
                <label asp-for="UserName">UserName</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <hr />
            <h6>Roles</h6>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Roles[i].IsSelected" class="form-check-label">
                        @Model.Roles[i].RoleName
                    </label>
                </div>
            }
            <span asp-validation-for="Roles" class="text-danger"></span>
            <button type="submit" class="btn btn-primary d-block mt-4"> Save</button>
        </form>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
