@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
	ViewData["Title"] = "Roles";
}
<h1> Roles </h1>
<table class="table table-striped mt-4">
	<thead>
		<tr class="bg-primary text-white">
			<th>Id</th>
			<th>Role Name</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
			</tr>
		}
	</tbody>
	<div>
		<a class="btn btn-primary" asp-action="Create" asp-controller="Role">Add New Role</a>
	</div>

</table>