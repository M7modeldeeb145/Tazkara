@using Tazaker.Models
@model List<League>

<h1>All Leagues</h1>
@foreach(var league in Model)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Teams</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@league.Name</td>
				<a asp-action="ShowTeams" asp-controller="League">Show Teams</a>
			</tr>
		</tbody>
	</table>
}
