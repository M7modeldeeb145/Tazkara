@using Tazaker.Models
@model List<Match>
<h1>Search Results</h1>
<div class="container">
    <div class="row row-cols-3 g-4">
        @if (Model.Count <= 0)
        {
            <h1>NOT FOUND</h1>
        }
        else
        {
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <b>@Model[i].Name</b>
                        </div>
                        <div class="card-body">
                            <p class="align-bottom">League: <span class="btn btn-outline-secondary">@Model[i].League.Name</span></p>
                            <p class="card-text">Stadium: @Model[i].Stadium.Name</p>
                            <p class="card-text">Star Date: @Model[i].StartDate</p>
                            <p class="card-text">End Date: @Model[i].EndDate</p>
                            <p>Status: <span class="btn alert-primary">@Model[i].Stadium.StadiumStatus</span> </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>