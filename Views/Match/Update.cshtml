@model Tazkara.ViewModels.MatchViewModel

@{
    ViewData["Title"] = "Update Match";
    SelectList Stadiums = new SelectList(ViewBag.Stadiums, "Id", "Name");
    SelectList Teams = new SelectList(ViewBag.Teams, "Id", "Name");
    SelectList Leagues = new SelectList(ViewBag.Leagues, "Id", "Name");
}

<h1 class="text-center my-4 ">Update Match Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-black">Match Details</h4>
                    <hr />
                    <form asp-action="Update">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label text-black">Match Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label text-black">Start Date</label>
                            <input asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label text-black">End Date</label>
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LeagueId" class="control-label text-black">League</label>
                            <select asp-items="Leagues" asp-for="LeagueId" class="form-control"></select>
                            <span asp-validation-for="LeagueId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StadiumId" class="control-label text-black">Stadium</label>
                            <select asp-items="Stadiums" asp-for="StadiumId" class="form-control"></select>
                            <span asp-validation-for="StadiumId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TeamA" class="control-label text-black">Team 1</label>
                            <select asp-items="Teams" asp-for="TeamA" class="form-control"></select>
                            <span asp-validation-for="TeamA" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TeamB" class="control-label text-black">Team 2</label>
                            <select asp-items="Teams" asp-for="TeamB" class="form-control"></select>
                            <span asp-validation-for="TeamB" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
